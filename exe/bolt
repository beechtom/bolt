#!/usr/bin/env ruby
# frozen_string_literal: true

if RbConfig::CONFIG['host_os'] =~ /mswin|mingw|cygwin/
  ENV['BOOTSNAP_CACHE_DIR'] = File.join(ENV['ProgramData'], 'Puppetlabs', 'bolt')
  require 'bootsnap/setup'
end
require 'bolt'
require 'bolt/cli'

Thread.current[:name] ||= 'main'
cli = Bolt::CLI.new(ARGV)
begin
  opts = cli.parse
  exitcode = cli.execute(opts)
  exit exitcode
rescue Bolt::CLIExit
  exit
rescue Bolt::Error => e
  exit e.error_code
end
